<?xml version="1.0" encoding="utf-8"?>
<resources>

  <color name="fallingFruitBackground">#e0e1e2</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Wojtek: I updated these to FF values but not sure if these colors do anything -->
        <item name="colorPrimary">#ffa41b</item>
        <item name="colorPrimaryDark">#B37314</item>
        <item name="colorAccent">#4183c4</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

  <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
       <item name="android:background">@drawable/splash</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
    <item name="windowSplashScreenBackground">@color/fallingFruitBackground</item>

    <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
  </style>
</resources>